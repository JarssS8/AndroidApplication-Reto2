<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <View
        android:id="@+id/viewUploadDocmuent"
        android:layout_width="273dp"
        android:layout_height="329dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />

    <EditText
        android:id="@+id/txtUploadDocName"
        android:layout_width="242dp"
        android:layout_height="42dp"
        android:hint="Name of the Document"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/viewUploadDocmuent"
        app:layout_constraintEnd_toEndOf="@+id/viewUploadDocmuent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/viewUploadDocmuent"
        app:layout_constraintTop_toTopOf="@+id/viewUploadDocmuent"
        app:layout_constraintVertical_bias="0.088" />

    <Spinner
        android:id="@+id/spinnerCategoriesUploadDocument"
        android:layout_width="242dp"
        android:layout_height="31dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewUploadDocmuent"
        app:layout_constraintEnd_toEndOf="@+id/viewUploadDocmuent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/viewUploadDocmuent"
        app:layout_constraintTop_toTopOf="@+id/viewUploadDocmuent"
        app:layout_constraintVertical_bias="0.323"
        />

    <TextView
        android:id="@+id/lbPathDocument"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Selecciona un documento ->"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/viewUploadDocmuent"
        app:layout_constraintEnd_toEndOf="@+id/viewUploadDocmuent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="@+id/viewUploadDocmuent"
        app:layout_constraintTop_toTopOf="@+id/viewUploadDocmuent"
        app:layout_constraintVertical_bias="0.555" />


    <ImageView
        android:id="@+id/imageButtonFindFile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:src="@drawable/ic_file_upload_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewUploadDocmuent"
        app:layout_constraintEnd_toEndOf="@+id/viewUploadDocmuent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="@+id/viewUploadDocmuent"
        app:layout_constraintTop_toTopOf="@+id/viewUploadDocmuent"
        app:layout_constraintVertical_bias="0.55" />

    <Button
        android:id="@+id/btUploadDocument"
        android:layout_width="89dp"
        android:layout_height="44dp"
        android:clickable="true"
        android:text="UPLOAD"
        app:layout_constraintBottom_toBottomOf="@+id/viewUploadDocmuent"
        app:layout_constraintEnd_toEndOf="@+id/viewUploadDocmuent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/viewUploadDocmuent"
        app:layout_constraintTop_toTopOf="@+id/viewUploadDocmuent"
        app:layout_constraintVertical_bias="0.875" />


</androidx.constraintlayout.widget.ConstraintLayout>